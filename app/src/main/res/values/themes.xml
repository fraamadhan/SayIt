<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SayIt" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorTertiary">@color/tertiary_light</item>
    </style>

    <style name="Theme.SayIt" parent="Base.Theme.SayIt" />

    <style name="Theme.SplashScreen" parent="Base.Theme.SayIt">
        <item name="android:background">@color/primary_light</item>
        <item name="backgroundColor">@color/primary_light</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <!-- border color -->
        <item name="boxStrokeColor">@color/black</item>

        <!-- The color of the label when it is collapsed and the text field is active -->
        <item name="hintTextColor">#bbbbbb</item>
        <!-- The color of the label in all other text field states (such as resting and disabled) -->
        <item name="android:textColorHint">#A6A0A0</item>
    </style>

    <style name="Go_Register_Login">
        <item name="boxStrokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/average_sans</item>
    </style>

    <style name="ProfilePageButton">
        <item name="boxStrokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:backgroundTint">@color/primary_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/average_sans</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="Theme.SayIt.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.SayIt.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.SayIt.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>